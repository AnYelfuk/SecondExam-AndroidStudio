<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/small_padding"
        tools:context=".MainActivity">

        <ScrollView
            style="@style/Style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title_textView"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titlet_textView" />

                <EditText
                    android:id="@+id/nickName_hero"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/What_is_nickname_hero"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/guess_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adivinar_button" />

                <TextView
                    android:id="@+id/clue_textView"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pista"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/namePerson_text"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/namePerson" />

                <ImageView
                    android:id="@+id/imageView_Photo"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:contentDescription="@string/photo_person"
                    android:paddingTop="@dimen/small_padding"
                    app:srcCompat="@drawable/hugh_jackman" />

                <TextView
                    android:id="@+id/description_textView"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_textView" />

                <TextView
                    android:id="@+id/textView_movie1"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_movie1" />

                <ImageView
                    android:id="@+id/movie1_image"
                    android:layout_width="match_parent"
                    android:layout_height="378dp"
                    android:contentDescription="@string/movie_billboard1"
                    app:srcCompat="@drawable/logan" />

                <TextView
                    android:id="@+id/textView_movie2"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_movie2" />

                <ImageView
                    android:id="@+id/movie2_image"
                    android:layout_width="match_parent"
                    android:layout_height="391dp"
                    android:contentDescription="@string/movie_billboard2"
                    app:srcCompat="@drawable/the_wolverine" />

                <TextView
                    android:id="@+id/textView_movie3"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_movie3" />

                <ImageView
                    android:id="@+id/movie3_image"
                    android:layout_width="match_parent"
                    android:layout_height="433dp"
                    android:contentDescription="@string/movie_billboard3"
                    app:srcCompat="@drawable/x_men_dias_del_futuro_pasado" />

                <TextView
                    android:id="@+id/textView_movie4"
                    style="@style/Style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/textView_movie4" />

                <ImageView
                    android:id="@+id/movie4_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/movie_billboard4"
                    app:srcCompat="@drawable/deadpool_2" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>
